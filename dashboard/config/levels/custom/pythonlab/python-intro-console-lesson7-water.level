          "language": "py",
          "contents": "import random\n\n# Simulated Hero class\nclass Hero:\n    def __init__(self):\n        self.potions = {\"watering\": 8}  # Initial number of watering potions\n        self.plants_watered = 0        # Total plants watered\n        self.steps = 0                 # Steps taken\n\n    # Check if hero has the specified potion\n    def has_potion(self, potion_type):\n        return self.potions.get(potion_type, 0) > 0\n\n    # Use the specified potion\n    def use_potion(self, potion_type):\n        if self.has_potion(potion_type):\n            self.potions[potion_type] -= 1\n\n    # Water a plant\n    def water(self, target):\n        if self.has_potion(\"watering\"):\n            self.use_potion(\"watering\")\n            self.plants_watered += 1\n            print(f\"💧 You watered a {target}! Total plants watered: {self.plants_watered}\")\n        else:\n            print(\"🚫 No watering potions left!\")\n\n    # Move to the next location\n    def move(self):\n        self.steps += 1\n        print(f\"➡️ Moved to step {self.steps}\")\n\n# Instantiate the hero object\nhero = Hero()\n",
